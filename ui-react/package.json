        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-switch": "^1.2.6",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-tooltip": "^1.1.5",
        "@tauri-apps/api": "^2.2.0",
        "@tauri-apps/plugin-shell": "^2.3.5",
        "class-variance-authority": "^0.7.1",
